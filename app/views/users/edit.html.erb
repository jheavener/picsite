<div class="row">
	<div class="hidden-xs hidden-sm col-md-3">
		<div class="list-group">
			<a href="<%= settings_path %>" class="list-group-item">Basic Settings</a>
			<a href="<%= changepassword_path %>" class="list-group-item">Change Password</a>
			<a href="<%= delete_user_path %>" class="list-group-item">Delete Account</a>
		</div>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading"><h3 class="text-center">Basic Settings</h3></div>
			<div class="panel-body">
				<%= form_for @user, url: settings_path, html: { id: nil, class: nil } do |f| %>
					<div class="alert alert-danger<%= ' hide' if @user.errors.empty? %>" role="alert"><%= @user.errors.full_messages.join('<br>').html_safe %></div>
					<div class="form-group">
						<label class="control-label" for="email">Email Address (optional):</label>
						<input type="text" id="email" class="form-control" name="user[email]" value="<%= @user.email %>">
					</div>
					<div class="form-group">
						<label class="control-label" for="password">Current Password:</label>
						<input type="password" id="password" class="form-control" name="password">
						<p class="help-block">To save your changes, please enter your password.</p>
					</div>
					<button type="submit" class="btn btn-primary">Save Changes</button>
				<% end %>
			</div>
		</div>
	</div>
</div>
