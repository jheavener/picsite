<div class="row">
	<div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
		<div class="panel panel-default">
			<div class="panel-heading"><h1 class="text-center">Reset your Password</h1></div>
			<div class="panel-body">
				<h4 class="text-center">For user: <strong><%= @user.display_name %></strong></h4>
				<hr>
				<%= form_for @user, url: resetpassword_path, html: { id: nil, class: nil } do |f| %>
					<div class="alert alert-danger<%= ' hide' if @user.errors.empty? %>" role="alert"><%= @user.errors.full_messages.join('<br>').html_safe %></div>
					<div class="form-group<% if @user.errors[:password].any? %> has-error has-feedback<% end %>">
						<label class="control-label" for="password">Password:</label>
						<input type="password" id="password" class="form-control" name="user[password]">
					</div>
					<div class="form-group<% if @user.errors[:password_confirmation].any? %> has-error has-feedback<% end %>">
						<label class="control-label" for="password_confirmation">Confirm Your Password:</label>
						<input type="password" id="password_confirmation" class="form-control" name="user[password_confirmation]">
					</div>
					<button type="submit" class="btn btn-primary btn-lg btn-block">Reset Password</button>
				<% end %>
				<hr>
				<h4>Remember your password? <a href="<%= signin_path %>">Click&nbsp;here</a> to sign in.</h4>
			</div>
		</div>
	</div>
</div>
